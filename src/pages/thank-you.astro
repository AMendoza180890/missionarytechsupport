---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
---

<Layout 
	title="Thank you"
  	pageTitle="Thank you"
  	description="Your message has been sent. We appreciate your feedback and will get back to you soon."	
>
	<Section class:list={"container py-1 lg:py-1"} contain={false}>
		<div class="min-h-full mx-auto w-full max-w-6xl">
			<div class="text-center">
				<h1 class="font-bold  text-8xl">Thank You</>
				<h3 class="mt-8 text-4xl font-black text-brand-green text-balance lg:text-5xl">Your message has been sent.</h3>
				<p class="mt-6 text-base text-balance">We appreciate your feedback and will get back to you soon.</p>
				<div class="mt-16 mb-20">
					<a href="/" class="button button-green">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 20 20"
							fill="currentColor"
							class="size-4 inline-block -mt-0.5 mr-1"
						>
							<path
								fill-rule="evenodd"
								d="M9.293 2.293a1 1 0 0 1 1.414 0l7 7A1 1 0 0 1 17 11h-1v6a1 1 0 0 1-1 1h-2a1 1 0 0 1-1-1v-3a1 1 0 0 0-1-1H9a1 1 0 0 0-1 1v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-6H3a1 1 0 0 1-.707-1.707l7-7Z"
								clip-rule="evenodd"></path>
						</svg>
						Go back home
					</a>
				</div>
			</div>
		</div>
	</Section>
</Layout>
